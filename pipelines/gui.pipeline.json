{
    "pipeline": {
      "name": "gui",
      "project": {
        "name": "rfp-demo-hpe"
      }
    },
    "transform": {
      "image": "vmtyler/pdk:gui-v0.0.20d",
      "cmd": [
        "/bin/bash",
        "-C"
      ],
      "stdin": [
        "streamlit run gui.py -- --path-to-db /pfs/data --path-to-chat-model /data/Meta-Llama-3-8B-Instruct  --emb-model-path /data/bge-large-en-v1.5/"
      ],
      "env": {
        "PYTHON_UNBUFFERED": "1"
      }
    },
    "input": {
      "pfs": {
        "repo": "embed-docs",
        "glob": "/",
        "name": "data"
      }
    },
    "resourceRequests": {
      "cpu": 4,
      "memory": "16Gi",
      "disk": "10Gi"
    },
    "resourceLimits": {
      "gpu": {
        "type": "nvidia.com/gpu",
        "number": 2
      }
    },
    "autoscaling": false,
    "podPatch": "[{\"op\": \"add\",\"path\": \"/volumes/-\",\"value\": {\"name\": \"data-store\",\"hostpath\": {\"path\": \"/nvmefs1/tyler.britten\",\"type\": \"Directory\"}}}, {\"op\": \"add\",\"path\": \"/containers/0/volumeMounts/-\",\"value\": {\"mountPath\": \"/data\",\"name\": \"data-store\"}},{\"op\": \"add\",\"path\": \"/volumes/-\",\"value\": {\"name\": \"det-checkpoints\",\"hostpath\": {\"path\": \"/nvmefs1/determined/checkpoints\",\"type\": \"Directory\"}}}, {\"op\": \"add\",\"path\": \"/containers/0/volumeMounts/-\",\"value\": {\"mountPath\": \"/checkpoints\",\"name\": \"det-checkpoints\"}}]",
    "service": {
      "type": "LoadBalancer",
      "externalPort": 80,
      "internalPort": 8501
    }
  }
