{
  "autoscaling": false,
  "input": {
    "pfs": {
      "glob": "/*/*",
      "repo": "documents"
    }
  },
  "parallelismSpec": {
    "constant": 2
  },
  "pipeline": {
    "name": "parse-docs"
  },
  "resourceRequests": {
    "cpu": 4,
    "disk": "10Gi",
    "memory": "16Gi"
  },
  "transform": {
    "cmd": [
      "/bin/bash",
      "-C"
    ],
    "env": {
      "PYTHON_UNBUFFERED": "1"
    },
    "image": "vmtyler/pdk:parsing-v0.2.0c",
    "stdin": [
      "python3 parsing.py --input /pfs/documents --output /pfs/out --chunking_strategy by_title --folder_tags  --languages eng:rus"
    ]
  }
}
